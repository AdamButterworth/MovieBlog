extends layout

block content
  .jumbotron.showcase
    .container
      h1 Movie Blog
      p.lead Where I post my thoughts on the latest movies!
  .container
    .row
      .col-md-12
        each article, i in articles
          a(href='/articles/show/'+article._id)
            h2.post-title #{article.title}
          h4.post-subtitle #{article.subtitle}
          p.post-meta
            | Posted by #{article.author}
            | on #{moment(article.created_at).format('MMMM Do YYYY, h:mm:ss a')}
            hr
